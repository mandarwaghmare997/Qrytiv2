# Qrytiv2 Environment Variables
# Copy this file to .env and fill in your values

# AWS Configuration
AWS_REGION=ap-south-1
AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_key_here

# S3 Buckets
S3_BUCKET_PROD=app.qryti.com
S3_BUCKET_STAGING=qrytiv2-staging

# CloudFront
CLOUDFRONT_DISTRIBUTION_ID=E2HCV8NIH27XPX

# Database Configuration
DATABASE_URL=sqlite:///./qrytiv2.db
DATABASE_URL_PROD=postgresql://user:password@host:port/database

# API Configuration
API_BASE_URL=http://localhost:8000
API_BASE_URL_PROD=https://api.qryti.com

# Security
SECRET_KEY=your_secret_key_here
JWT_SECRET_KEY=your_jwt_secret_here
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# Monitoring and Logging
LOG_LEVEL=INFO
SENTRY_DSN=your_sentry_dsn_here

# Feature Flags
ENABLE_REGISTRATION=true
ENABLE_EMAIL_VERIFICATION=false
ENABLE_AUDIT_LOGGING=true

# Frontend Configuration
VITE_API_BASE_URL=http://localhost:8000
VITE_API_BASE_URL_PROD=https://api.qryti.com
VITE_ENVIRONMENT=development

