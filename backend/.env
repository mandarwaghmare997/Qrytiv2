# Qrytiv2 Backend Configuration
# Development Environment

# Application
APP_NAME=Qrytiv2
APP_VERSION=2.0.0
ENVIRONMENT=development
DEBUG=true

# Security
SECRET_KEY=qrytiv2-super-secret-key-change-in-production-please
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Database
DATABASE_URL=sqlite:///./qrytiv2.db

# CORS
ALLOWED_HOSTS=["http://localhost:3000", "http://localhost:5173", "https://qryti.com"]

# File Storage
STORAGE_TYPE=local
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10485760
REPORTS_DIR=reports
CERTIFICATES_DIR=certificates

# Email Configuration (Optional)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your-email@company.com
# SMTP_PASSWORD=your-app-password
# FROM_EMAIL=noreply@qryti.com

# Slack Notifications (Optional)
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/...

# ISO 42001 Configuration
DEFAULT_VALIDITY_PERIOD_MONTHS=12
CERTIFICATION_THRESHOLD_SCORE=80.0

# Audit Trail
AUDIT_LOG_RETENTION_DAYS=2555

